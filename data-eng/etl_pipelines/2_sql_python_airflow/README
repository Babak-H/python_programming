vi ~/.dbt/profiles.yml

# change the custom_postgres section to this:

custom_postgres:
  outoputs:

    dev:
      type: postgres
      threads: 1
      host: host.docker.internal
      port: 5434
      user: postgres
      password: secret
      dbname: destination_db
      schema: public

target: dev


